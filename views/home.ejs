<%- include("partials/header.ejs"); -%>

  <h1>Home</h1>

  <p><%= startingContent %></p>

  <% posts.forEach(function (post) { %>

      <h1><%= post.title %></h1>
    <% if (post.content.length > 100) { %>

    <h1></h1>
    <p>
      <%= post.content.substr(0,100) + "..." %>
      <a href="/posts/<%=post.title%>">Read more</a>
    </p>

    <% } else { %>

    <%= post.content %>
    <a href="/posts/<%=post.title%>">Read more</a>

    <% }; %></p>

      <% }) %>


<%- include("partials/footer.ejs"); -%>
